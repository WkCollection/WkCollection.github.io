// Menu
// --------------------------------------------------
.menu {
  margin: 0;
  padding: 1em 0;
  text-align: center;
}

.menu-item {
  display: inline-block;
  list-style: none;
  margin: 0 10px;

  
  +mobile() {
    display: block;
    margin-top: 10px;

    &.menu-item-search {
      display: none;
    }
  }
  &:nth-child(1) {
  a {
    color #3b91f7;
  }
}
&:nth-child(2) {
  a {
    color #70c040;
  }
}
&:nth-child(3) {
  a {
    color #ff6360;
  }
}
&:nth-child(4) {
  a {
    color #fbab25;
  }
}
&:nth-child(5) {
  a {
    color #cf75dc;
  }
}
  a {
    border-bottom: 0;
    display: block;
    font-size: $font-size-smaller;
    transition: border-color $transition-ease;

    &:hover, &.menu-item-active {
      background: var(--menu-item-bg-color);
    }
  }

  .fa, .fab, .far, .fas {
    margin-right: 8px;
  }

  .badge {
    display: inline-block;
    font-weight: bold;
    line-height: 1;
    margin-left: .35em;
    margin-top: .35em;
    text-align: center;
    white-space: nowrap;

    +mobile() {
      float: right;
      margin-left: 0;
    }
  }
}

.use-motion .menu-item {
  visibility: hidden;
}
